# Fresh and friends
alias fresh='~/.fresh/source/freshshell/fresh/bin/fresh'
alias update='fresh update; antigen update; vundle-update'

# VIM
alias vi="vim"

# LS Colors
#export LS_OPTIONS='--color'
alias l='ls $LS_OPTIONS'
alias ll='ls $LS_OPTIONS -lh'
alias lll='ls $LS_OPTIONS -alh'
alias sl='ls $LS_OPTIONS' # often screw this up
# Enable ls colors
# Edited - S.M. Changed ls -G -> ls --color. Requires dircolor to be valid.
# if [ "$DISABLE_LS_COLORS" != "true" ]
# then
   # Find the option for using colors in ls, depending on the version: Linux or BSD
   ls --color -d . &>/dev/null 2>&1 && alias ls='ls --color=tty -h' || alias ls='ls --color -h'
# fi

# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
